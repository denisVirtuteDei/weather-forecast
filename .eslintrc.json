{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": [
            "warn",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-unused-vars": "off",
        "operator-linebreak": "warn",
        "react/jsx-closing-tag-location": 2,
        "react/jsx-max-props-per-line": [
            2,
            {
                "maximum": 4,
                "when": "always"
            }
        ],
        "react/jsx-filename-extension": [
            2,
            {
                "extensions": [
                    ".jsx"
                ]
            }
        ],
        "comma-dangle": [
            2,
            "always-multiline"
        ]
    },
    "overrides": [
        {
            "files": [
                "src/index.js"
            ],
            "rules": {
                "react/jsx-filename-extension": "off"
            }
        }
    ]
}